@model BlogProject.Entities.Dtos.UserLoginDto
@{
	Layout = "_UserLoginLayout";
	ViewBag.Title = "Giriş Yap";
}

<div class="container">
	<div class="row justify-content-center">
		<div class="col-lg-5">
			<div class="card shadow-lg border-0 rounded-lg mt-5">
				<div class="card-header"><h3 class="text-center font-weight-light my-4"><span class="fas fa-house-user"></span>Giriş Yap</h3></div>
				<div class="card-body">
					<form asp-controller="User" asp-action="Login" method="post">
						<div asp-validation-summary ="All" class="text-danger"></div>
						<div class="form-floating mb-3">
							<label asp-for="Email">EPosta</label>
							<input class="form-control" asp-for="Email" type="email" placeholder="EPosta giriniz." />
							<span asp-validation-for="Email" class="text-danger"></span>
						</div>
						<div class="form-floating mb-3">
							<label asp-for="Password">Şifre</label>
							<input class="form-control" asp-for="Password" type="password" placeholder="Şifre giriniz." />
							<span asp-validation-for="Password" class="text-danger"></span>
						</div>
						<div class="form-check mb-3">
							<input class="form-check-input" asp-for="RememberMe" type="checkbox" value="" />
							<label class="form-check-label" asp-for="RememberMe">Beni Hatırla</label>
						</div>
						<div class="d-flex align-items-center justify-content-between mt-4 mb-0">
							<a class="btn btn-secondary text-white"><span class="fas fa-user-lock"></span>Şifremi Unuttum?</a>
							<button type="submit" class="btn btn-primary"><span class="fas fa-sign-in-alt"></span>Giriş Yap</button>
						</div>
					</form>
				</div>
				<div class="card-footer text-center py-3">
						<a class="btn btn-success btn-block text-white"><span class="fas fa-user-edit"></span>Kayıt Ol</a>
				</div>
			</div>
		</div>
	</div>
</div>